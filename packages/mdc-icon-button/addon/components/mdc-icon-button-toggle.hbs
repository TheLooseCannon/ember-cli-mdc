<button class="mdc-icon-button {{this.kind}}"
        aria-label={{@label}}
        data-aria-label-on={{@on.label}}
        data-aria-label-off={{@off.label}}
        {{did-insert this.didInsert}}
        {{did-update this.toggle @on}}
        ...attributes>

  <MdcIconButtonIcon @icon={{@iconOn.icon}} @on={{true}} />
  <MdcIconButtonIcon @icon={{@iconOff.icon}} />

</button>
