<h3>Outlined</h3>

<div class="text-field-row">
  <div class="text-field-container">
    <MdcTextfield @style="outlined" @label="Outlined" />
  </div>

  <div class="text-field-container">
    <MdcTextfield @label="Helper Text" @helperText="This is helper text" @persistentHelperText={{false}} />
  </div>

  <div class="text-field-container">
    <MdcTextfield @label="Error message" @helperText="This is helper text" @errorMessage="This is an error message." />
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="outlined" @label="Pre-filled" @value="Pre-filled with value" />
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="outlined" />
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="outlined" @label="Disabled" @disabled={{true}} />
  </div>
</div>

<h3>Leading Icons</h3>

<div class="text-field-row">
  <div class="text-field-container">
    <MdcTextfield @style="filled" @label="Leading icon" @leadingIcon="email" />
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="filled" @label="Clickable Leading icon" @leadingIcon="email" @leadingIconClick={{this.alert}} />
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="outlined" @label="Leading icon" @leadingIcon="email" />
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="outlined" @label="Clickable Leading icon" @leadingIcon="email" @leadingIconClick={{this.alert}} @value="This is pre-filled"/>
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="outlined" @leadingIcon="email" @leadingIconClick={{this.alert}} />
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="outlined" @label="Clickable Leading icon" @leadingIcon="email" @leadingIconClick={{this.alert}} @disabled={{true}} />
  </div>
</div>

<h3>Trailing Icons</h3>

<div class="text-field-row">
  <div class="text-field-container">
    <MdcTextfield @style="filled" @label="Trailing icon" @trailingIcon="visibility_off" />
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="filled" @label="Clickable trailing icon" @trailingIcon="visibility_off" @trailingIconClick={{this.alert}} />
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="outlined" @label="Trailing icon" @trailingIcon="visibility_off" />
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="outlined" @label="Clickable trailing icon" @trailingIcon="visibility_off" @trailingIconClick={{this.alert}} />
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="outlined" @trailingIcon="visibility_off" @trailingIconClick={{this.alert}} />
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="outlined" @trailingIcon="visibility_off" @trailingIconClick={{this.alert}} @disabled={{true}} />
  </div>
</div>


<h3>Leading & Trailing Icons</h3>

<div class="text-field-row">
  <div class="text-field-container">
    <MdcTextfield @style="filled" @label="Filled" @leadingIcon="lock" @trailingIcon="visibility_off" />
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="outlined" @label="Outlined" @leadingIcon="lock" @trailingIcon="visibility_off" />
  </div>
</div>

<h3>Character Count</h3>

<div class="text-field-row">
  <div class="text-field-container">
    <MdcTextfield @style="filled" @label="Filled" @characterCount={{true}} maxlength="20" />
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="outlined" @label="Outlined" @characterCount={{true}} maxlength="50" />
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="outlined"
                  @label="Outlined"
                  @helperText="This also has helper text."
                  @persistentHelperText={{true}}
                  @characterCount={{true}}
                  maxlength="25" />
  </div>
</div>

<h3>Full Width</h3>

<div class="text-field-row">
  <div class="text-field-container">
    <MdcTextfield @style="filled" @label="Filled" @fullWidth={{true}} placeholder="Full width text field" />
  </div>
</div>

<h3>Prefix & Suffix</h3>

<div class="text-field-row">
  <div class="text-field-container">
    <MdcTextfield @style="filled" @label="Filled" @prefix="$" />
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="outlined" @label="Outlined" @prefix="$" @suffix=".00" />
  </div>
</div>

<h3>Password Text Field</h3>

<div class="text-field-row">
  <div class="text-field-container">
    <MdcPasswordTextfield @style="filled" @label="Password" />
  </div>

  <div class="text-field-container">
    <MdcPasswordTextfield @style="filled" @label="Password" @errorMessage="The password is incorrect." />
  </div>

  <div class="text-field-container">
    <MdcPasswordTextfield @style="outlined" @label="Password" />
  </div>
</div>

<h1>Textarea</h1>

<div class="text-field-row">
  <div class="text-field-container">
    <MdcTextarea @label="Filled" @style="filled" rows="8" cols="40" />
  </div>

  <div class="text-field-container">
    <MdcTextarea @label="Filled" @style="outlined" rows="8" cols="40" @errorMessage="We have a problem here." @characterCount={{true}} maxlength="500" />
  </div>

  <div class="text-field-container">
    <MdcTextarea @label="Helper Text" @style="outlined" @helperText="This has helper text" @persistentHelperText={{true}} rows="8" cols="40" />
  </div>

  <div class="text-field-container">
    <MdcTextarea @label="Disabled" @style="outlined" @disabled={{true}} rows="8" cols="40" />
  </div>
</div>

