<h2 class="mdc-typography--headline4" id="title">Text Fields</h2>

<h3 class="mdc-typography--subtitle1">Filled</h3>

<div class="text-field-row">
  <div class="text-field-container">
    <MdcTextfield @style="filled" @label="Filled" />
  </div>

  <div class="text-field-container">
    <MdcTextfield @label="Helper Text" @helperText="This is helper text" @persistentHelperText={{false}} />
  </div>

  <div class="text-field-container">
    <MdcTextfield @label="Error message" @helperText="This is helper text" @errorMessage="This is an error message." />
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="filled" @label="Pre-filled" @value="Pre-filled with value" />
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="filled" />
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="filled" @label="Disabled" @disabled={{true}} />
  </div>

</div>

