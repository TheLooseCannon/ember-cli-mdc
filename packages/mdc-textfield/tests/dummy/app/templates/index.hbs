<h3 class="mdc-typography--subtitle1">Outlined</h3>

<div class="text-field-row">
  <div class="text-field-container">
    <MdcTextfield @style="outlined" @label="Outlined" />
  </div>

  <div class="text-field-container">
    <MdcTextfield @label="Helper Text" @helperText="This is helper text" @persistentHelperText={{false}} />
  </div>

  <div class="text-field-container">
    <MdcTextfield @label="Error message" @helperText="This is helper text" @errorMessage="This is an error message." />
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="outlined" @label="Pre-filled" @value="Pre-filled with value" />
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="outlined" />
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="outlined" @label="Disabled" @disabled={{true}} />
  </div>
</div>

<h3 class="mdc-typography--subtitle1">Icons</h3>

<div class="text-field-row">
  <div class="text-field-container">
    <MdcTextfield @style="filled" @label="Leading icon" @leadingIcon="email" />
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="filled" @label="Clickable Leading icon" @leadingIcon="email" @leadingIconClick={{this.alert}} />
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="filled" @label="Trailing icon" @trailingIcon="visibility_off" />
  </div>
</div>

<h3 class="mdc-typography--subtitle1">Character Count</h3>

<div class="text-field-row">
  <div class="text-field-container">
    <MdcTextfield @style="filled" @label="Filled" @characterCount={{true}} maxlength="20" />
  </div>

  <div class="text-field-container">
    <MdcTextfield @style="outlined" @label="Outlined" @characterCount={{true}} maxlength="50" />
  </div>
</div>


