<MdcTextfield @style="outlined" @class="mdc-text-field__multipart">
  {{mdc-textfield-icon "credit_card" clickable=false}}

  <MdcTextfieldInput @value={{number}} @type="text" @class="cc-number" @minlength={{metadata.length}} @maxlength={{metadata.length}} @size={{22}} @keyUp={{action "formatCardNumber"}} @required={{true}} />

  <MdcTextfieldInput @value={{cvc}} @type="text" @class="cc-cvc" @placeholder="CVC" @minlength={{metadata.cvc}} @maxlength={{metadata.cvc}} @size={{4}} @required={{true}} />

  <MdcTextfieldInput @type="text" @class="cc-expiry" @placeholder="MM / YY" @minlength={{5}} @maxlength={{5}} @size={{7}} @required={{true}} />

  <MdcNotchedOutline @label="Card details" />
</MdcTextfield>
