<label class="mdc-text-field {{this.styleClassName}}
  {{unless @label "mdc-text-field--no-label"}}
  {{if @disabled "mdc-text-field--disabled"}}
  {{if @alignEnd "mdc-text-field--end-aligned"}}
  {{if @fullWidth "mdc-text-field--fullwidth"}}
  {{if @ltr "mdc-text-field--ltr-text"}}
  {{if @focused "mdc-text-field--focused"}}
  {{if @leadingIcon "mdc-text-field--with-leading-icon"}}
  {{if @trailingIcon "mdc-text-field--with-trailing-icon"}}"
{{did-insert this.didInsert}}>
  {{#if this.filled}}
    <span class="mdc-text-field__ripple"></span>
  {{/if}}

  {{#if @leadingIcon}}
    <MdcIcon @icon={{@leadingIcon}}
             class="mdc-text-field__icon mdc-text-field__icon--leading"
             tabindex={{if @leadingIconClick "0"}}
             role={{if @leadingIconClick "button"}} {{on "click" this.leadingIconClick}} />
  {{/if}}

  {{#if @prefix}}
    <span class="mdc-text-field__affix mdc-text-field__affix--prefix">{{@prefix}}</span>
  {{/if}}

  <MdcTextfieldInput ...attributes @value={{@value}}
                     aria-labelledby={{this.labelId}}
                     aria-controls={{this.helperId}}
                     aria-describedby={{this.helperId}}
                     disabled={{@disabled}} />

  {{#if @suffix}}
    <span class="mdc-text-field__affix mdc-text-field__affix--suffix">{{@suffix}}</span>
  {{/if}}

  {{#if @trailingIcon}}
    <MdcIcon @icon={{@trailingIcon}}
             class="mdc-text-field__icon mdc-text-field__icon--leading"
             tabindex={{if @trailingIconClick "0"}}
             role={{if @trailingIconClick "button"}} {{on "click" this.trailingIconClick}} />
  {{/if}}

  {{#if this.filled}}
    {{#if @label}}
      {{#unless @fullWidth}}
        <span class="mdc-floating-label" id={{this.labelId}}>{{@label}}</span>
      {{/unless}}
    {{/if}}
    <span class="mdc-line-ripple"></span>
  {{else}}
    <span class="mdc-notched-outline">
      <span class="mdc-notched-outline__leading"></span>
      <span class="mdc-notched-outline__notch">
        {{#if @label}}
          <span class="mdc-floating-label" id={{this.labelId}}>{{@label}}</span>
        {{/if}}
      </span>
      <span class="mdc-notched-outline__trailing"></span>
    </span>
  {{/if}}
</label>
{{#if this.helperLine}}
  <div class="mdc-text-field-helper-line">
    {{#if @characterCount}}
      <div class="mdc-text-field-character-counter" />
    {{else}}
      <div class="mdc-text-field-helper-text {{if this.persistentHelperText "mdc-text-field-helper-text--persistent"}} {{if @errorMessage "mdc-text-field-helper-text--validation-msg"}}"
           id={{this.helperId}}
           aria-hidden="true">{{this.helperText}}</div>
    {{/if}}
  </div>
{{/if}}
