<MdcSnackbarSurface>
  {{#if (has-block)}}
    {{yield}}
  {{else}}
    <MdcSnackbarLabel>{{label}}</MdcSnackbarLabel>

    {{#if actions}}
      <MdcSnackbarActions>
        <MdcSnackbarButton @click={{action.handler}}>{{action.text}}</MdcSnackbarButton>
        {{#if dismissible}}
          {{mdc-snackbar-dismiss dismissIcon}}
        {{/if}}
      </MdcSnackbarActions>
    {{/if}}
  {{/if}}
</MdcSnackbarSurface>