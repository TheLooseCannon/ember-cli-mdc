<th class="mdc-data-table__header-cell
  {{if @numeric "mdc-data-table__header-cell--numeric"}}
  {{if @checkbox "mdc-data-table__header-cell--checkbox"}}"
    role="columnheader"
    scope="col">
  {{#if @checkbox}}
    <div class="mdc-checkbox mdc-data-table__header-row-checkbox {{if @selected "mdc-checkbox--selected"}}">
      <Input type="checkbox" class="mdc-checkbox__native-control" aria-label={{@label}} />
      <div class="mdc-checkbox__background">
        <svg class="mdc-checkbox__checkmark" viewBox="0 0 24 24">
          <path class="mdc-checkbox__checkmark-path" fill="none" d="M1.73,12.91 8.1,19.28 22.79,4.59" />
        </svg>
        <div class="mdc-checkbox__mixedmark"></div>
      </div>
    </div>
  {{else}}
    {{yield}}
  {{/if}}
</th>
