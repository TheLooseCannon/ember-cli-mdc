<MdcTabContent>
  {{#if icon}}
    {{mdc-tab-icon icon}}
  {{/if}}
  {{#if label}}
    <MdcTabTextLabel>{{label}}</MdcTabTextLabel>
  {{/if}}

  {{#if contentOnlyIndicator}}
    <MdcTabIndicator @active={{active}}>
      <MdcTabIndicatorContent />
    </MdcTabIndicator>
  {{/if}}
</MdcTabContent>

{{#unless contentOnlyIndicator}}
  <MdcTabIndicator @active={{active}}>
    <MdcTabIndicatorContent />
  </MdcTabIndicator>
{{/unless}}

<MdcTabRipple />