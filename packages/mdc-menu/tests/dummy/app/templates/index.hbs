<h3>General Menu</h3>

<div class="toolbar" {{mdc-menu-surface-anchor}}>
  <button {{on "click" this.openMenu}}>Open Menu</button>

  <MdcMenu @open={{this.open}} @anchorCorner="bottomLeft">
    <MdcMenuList>
      <MdcMenuItemLinkTo @route="index">This is the link</MdcMenuItemLinkTo>

      <MdcListDivider />

      <li>
        <MdcMenuSelectionGroup>
          <MdcMenuItem>
            <MdcMenuSelectionGroupIcon>...</MdcMenuSelectionGroupIcon>
            <MdcMenuItemText>Single</MdcMenuItemText>
          </MdcMenuItem>

          <MdcMenuItem>
            <MdcMenuSelectionGroupIcon>...</MdcMenuSelectionGroupIcon>
            <MdcMenuItemText>1.15</MdcMenuItemText>
          </MdcMenuItem>
        </MdcMenuSelectionGroup>
      </li>

      <MdcListDivider />

      <MdcMenuItem @text="Add space before paragraph" />
      <MdcMenuItem><MdcMenuItemText>Add space after paragraph</MdcMenuItemText></MdcMenuItem>
    </MdcMenuList>
  </MdcMenu>
</div>

