<h2 id="title">Linear Stepper</h2>

<MdcButton @style="unelevated" @click={{action (mut error) "This is an error"}}>Set Error</MdcButton>

<MdcStepper @linear={{true}} @complete={{action "complete"}}>
  <MdcStep as |step|>
    <MdcStepLabel>
      <MdcStepLabelIndicator />

      <MdcStepTitle>
        <MdcStepTitleText>Title of Step 1</MdcStepTitleText>
        <MdcStepTitleMessage>{{if step.isCompleted "Step 1 is complete" "Step 1 is not complete"}}</MdcStepTitleMessage>
      </MdcStepTitle>
    </MdcStepLabel>

    <MdcStepContent />

    <MdcStepActions>
      <MdcStepButton @action="next" @style="unelevated">Continue</MdcStepButton>
      <MdcStepButton @action="skip">Skip</MdcStepButton>
      <MdcStepButton @action="cancel">Cancel</MdcStepButton>
    </MdcStepActions>
  </MdcStep>

  <MdcStep @editable={{true}} @error={{error}} as |step|>
    <MdcStepLabel>
      <MdcStepLabelIndicator />

      <MdcStepTitle>
        <MdcStepTitleText>Step 2</MdcStepTitleText>

        <MdcStepTitleMessage>
          {{#if step.error}}
            {{error}}
          {{else if step.isCompleted}}
            {{#unless step.isActive}}
              Step 2 is complete
            {{/unless}}
          {{else}}
            Step 2 is not complete
          {{/if}}
        </MdcStepTitleMessage>
      </MdcStepTitle>

    </MdcStepLabel>

    <MdcStepContent />

    <MdcStepActions>
      <MdcStepButton @action="next" @style="unelevated">Continue</MdcStepButton>
      <MdcStepButton @action="back">Back</MdcStepButton>
    </MdcStepActions>
  </MdcStep>

  <MdcStep @optional={{true}} @editable={{true}} as |step|>
    <MdcStepLabel>
      <MdcStepLabelIndicator />

      <MdcStepTitle>
        <MdcStepTitleText>Step 3</MdcStepTitleText>
        <MdcStepTitleMessage>Optional</MdcStepTitleMessage>
      </MdcStepTitle>
    </MdcStepLabel>

    <MdcStepContent />

    <MdcStepActions>
      <MdcStepButton @action="next" @style="unelevated">Continue</MdcStepButton>
      <MdcStepButton @action="skip">Skip</MdcStepButton>
      <MdcStepButton @action="back">Back</MdcStepButton>
    </MdcStepActions>
  </MdcStep>

  <MdcStep>
    <MdcStepLabel>
      <MdcStepLabelIndicator />

      <MdcStepTitle>
        <MdcStepTitleText>Step 4</MdcStepTitleText>
        <MdcStepTitleMessage>Message for Step 4</MdcStepTitleMessage>
      </MdcStepTitle>
    </MdcStepLabel>

    <MdcStepContent />

    <MdcStepActions>
      <MdcStepButton @action="next" @style="unelevated">Continue</MdcStepButton>
      <MdcStepButton @action="back">Back</MdcStepButton>
    </MdcStepActions>
  </MdcStep>
</MdcStepper>