<h2 id="title">Cards</h2>

<h3>Standard</h3>

<MdcCard class="standard">
  <MdcCardContent>
    The card content goes here.
  </MdcCardContent>

  <MdcCardActions>
    <MdcCardActionButtons>
      <MdcCardActionButton>Action 1</MdcCardActionButton>
      <MdcCardActionButton>Action 2</MdcCardActionButton>
    </MdcCardActionButtons>

    <MdcCardActionIcons>
      <MdcCardActionIcon @icon="share" @title="Share" />
      <MdcCardActionIcon @icon="more_vert" @title="More options" />
    </MdcCardActionIcons>
  </MdcCardActions>
</MdcCard>

<h3>Outlined</h3>

<MdcCard class="standard" @outlined={{true}}>
  <MdcCardContent>This is an outlined card.</MdcCardContent>

  <MdcCardActions>
    <MdcCardActionButtons>
      <MdcCardActionButtonLinkTo @route="index" @label="Go Home (inline)" />
      <MdcCardActionButtonLinkTo @route="index">Go Home (block)</MdcCardActionButtonLinkTo>
    </MdcCardActionButtons>

    <MdcCardActionIcons>
      <MdcCardActionIcon @icon="share" @title="Share" />
      <MdcCardActionIcon @icon="more_vert" @title="More options" />
    </MdcCardActionIcons>
  </MdcCardActions>
</MdcCard>


<h3>Actionable</h3>

<MdcCard class="actionable">
  <MdcCardPrimaryAction>
    Actionable Section <br /> (using HTML component)
  </MdcCardPrimaryAction>

  <MdcCardContent>Content outside the actionable area</MdcCardContent>
</MdcCard>

<MdcCard class="actionable">
  <div {{mdc-card-primary-action}}>
    Actionable Section <br /> (using modifier)
  </div>

  <MdcCardContent>Content outside the actionable area</MdcCardContent>

</MdcCard>


<h3>Media</h3>

<MdcCard class="media">
  <MdcCardMedia @scale="16-9" class="my-card-media">
    <MdcCardMediaContent>16x9 Media</MdcCardMediaContent>
  </MdcCardMedia>

</MdcCard>

<MdcCard class="media">
  <MdcCardMedia @scale="square" class="my-card-media">
    <MdcCardMediaContent>Square Media</MdcCardMediaContent>
  </MdcCardMedia>

</MdcCard>


<h3>Full Bleed</h3>

<MdcCard @class="full-bleed">

  <MdcCardActions @fullBleed={{true}}>
    <MdcCardActionButtonLinkTo @route="index" @label="All Business Headlines" @trailingIcon="arrow_forward" />
  </MdcCardActions>
</MdcCard>
