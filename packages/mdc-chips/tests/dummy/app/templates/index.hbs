<h2>Basic Chips</h2>

<h3>Block</h3>


<MdcChipSet>
  <MdcChip @text="Chip content" />
  <MdcChip @text="Leading icon" @leadingIcon="event" />
  <MdcChip @text="Trailing icon" @trailingIcon="cancel" />
</MdcChipSet>


<h3>Inline / Dynamic</h3>

<MdcChipSet @chips={{this.chips}} />

<p>Length: {{this.chips.length}}</p>

<p><form onsubmit={{this.submit}}>
  <Input @value={{this.chipLabel}} />

  <button type="submit">Add Chip</button>
</form></p>

<h4>Custom Keys</h4>

<MdcChipSet @chips={{this.customKeyChips}} @textKey="name" @label="Names" />
<p>Length: {{this.customKeyChips.length}}</p>


<h3>Choice Chips</h3>

<MdcChoiceChipSet @chips={{this.choiceChips}} @choice={{this.choice}} @change={{this.change}} />

<p>
  <button {{on "click" this.selectExtraSmall}}>Make Extra Small</button>
  <button {{on "click" this.clear}}>Clear Choice</button>
</p>

<p>Selected Value: {{this.choice.id}}</p>


<h3>Filter Chips</h3>

<MdcFilterChipSet @chips={{this.filterChips}} @filtered={{this.filtered}} />

<ul>
  {{#each this.filtered as |chip|}}
    <li>{{chip.text}}</li>
  {{/each}}
</ul>

<p>Filter Count: {{this.filtered.length}}</p>

<p>
  <button {{on "click" this.replaceFiltered}}>Set Chips</button>
  <button {{on "click" this.addToFiltered}}>Add last chip</button>
</p>


<h3>Input Chips</h3>

<MdcInputChipSet class="addresses"
                 @chips={{this.inputChips}}
                 @input={{this.input}}
                 @type="email"
                 @placeholder="Type name here" />
