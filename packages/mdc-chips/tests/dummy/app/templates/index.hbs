<h3>Basic Chips</h3>

<h5>Block</h5>

<MdcChipSet>
  <MdcChip @text="Chip content" />
  <MdcChip @text="Leading icon" @iconLeading="event" />
  <MdcChip @text="Trailing icon" @iconTrailing="cancel" />

  {{#each dynamicChips as |chip|}}
    <MdcChip @text={{chip.text}} @iconTrailing="cancel" />
  {{/each}}
</MdcChipSet>

<form onsubmit={{action "submit"}}>
  <Input @value={{chipLabel}} />

  <button type="submit">Add Chip</button>
</form>

<h5>Inline</h5>

<MdcChipSet @chips={{basicChips}} />

<h3>Choice Chips</h3>

<MdcChoiceChipSet @chips={{choiceChips}} @value={{choice}} />

<button {{action (mut choice) "extra_small"}}>Make Extra Small</button>
<button {{action (mut choice) null}}>Clear Choice</button>

<div>Selected Value: {{choice}}</div>

<h3>Filter Chips</h3>

<MdcFilterChipSet @chips={{filterChips}} @value={{filtered}} />

<ul>
  {{#each names as |id|}}
    <li>{{id}}</li>
  {{/each}}
</ul>

<p>Filter Count: {{filterChips.length}}</p>

<h3>Input Chips</h3>

<MdcTextfield @style="outlined">
  <MdcInputChipSet @chips={{chips}} @enter={{action "makeInputChip"}} />
  <MdcNotchedOutline @label="Tags" @notched={{true}} />
</MdcTextfield>
