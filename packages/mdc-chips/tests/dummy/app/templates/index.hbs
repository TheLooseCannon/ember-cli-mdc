<h2>Basic Chips</h2>

<h3>Block</h3>

<MdcChipSet>
  <MdcChip @text="Chip content" />
  <MdcChip @text="Leading icon" @leadingIcon="event" />
  <MdcChip @text="Trailing icon" @trailingIcon="cancel" />
</MdcChipSet>


<h3>Inline / Dynamic</h3>

<MdcChipSet @chips={{this.chips}} />

<p>Length: {{this.chips.length}}</p>

<p><form onsubmit={{this.submit}}>
  <Input @value={{this.chipLabel}} />

  <button type="submit">Add Chip</button>
</form></p>

<h4>Custom Keys</h4>

<MdcChipSet @chips={{this.customKeyChips}} @textKey="name" />
<p>Length: {{this.customKeyChips.length}}</p>

