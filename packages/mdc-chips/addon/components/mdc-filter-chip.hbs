<div class="mdc-chip" role="row">
  <div class="mdc-chip__ripple"></div>
  {{#if @leadingIcon}}
    <i class="material-icons mdc-chip__icon mdc-chip__icon--leading">{{@leadingIcon}}</i>
  {{/if}}
  {{#if @checked}}
    <span class="mdc-chip__checkmark">
      <svg class="mdc-chip__checkmark-svg" viewBox="-2 -3 30 30">
        <path class="mdc-chip__checkmark-path" fill="none" stroke="black" d="M1.73,12.91 8.1,19.28 22.79,4.59"/>
      </svg>
    </span>
  {{/if}}
  <span role="gridcell">
    <span role="checkbox" tabindex={{this.tabindex}} aria-checked={{@checked}} class="mdc-chip__primary-action">
      <span class="mdc-chip__text">{{@text}}</span>
    </span>
  </span>
  {{#if @trailingIcon}}
    <span role="gridcell">
      <i class="material-icons mdc-chip__icon mdc-chip__icon--trailing" tabindex="-1" role="button">{{@trailingIcon}}</i>
    </span>
  {{/if}}
</div>
