<div class="mdc-chip-set mdc-chip-set--{{this.type}}" role="grid" {{did-insert this.didInsert}} {{did-update this.sync this.syncKey}}>
  {{#if (has-block)}}
    {{yield}}
  {{else}}
    {{#each @chips as |chip index|}}
      <MdcChip @id={{get chip this.idKey}}
               @text={{get chip this.textKey}}
               @leadingIcon={{chip.leadingIcon}}
               @trailingIcon={{chip.trailingIcon}}
               @tabindex={{index}}
               @removal={{this.removeChip}} />
    {{/each}}
  {{/if}}
</div>
