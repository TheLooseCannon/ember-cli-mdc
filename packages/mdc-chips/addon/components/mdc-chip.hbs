<div id={{@id}} class="mdc-chip" role="row" {{did-insert this.didInsert}}>
  <div class="mdc-chip__ripple"></div>
  {{#if @leadingIcon}}
    <i class="material-icons mdc-chip__icon mdc-chip__icon--leading">{{@leadingIcon}}</i>
  {{/if}}
  <span role="gridcell">
    <span role="button" tabindex={{this.tabindex}} class="mdc-chip__primary-action">
      <span class="mdc-chip__text">
        {{#if (has-block)}}
          {{yield}}
        {{else}}
          {{@text}}
        {{/if}}
      </span>
    </span>
  </span>
  {{#if @trailingIcon}}
    <span role="gridcell">
      <i class="material-icons mdc-chip__icon mdc-chip__icon--trailing" tabindex="-1" role="button" {{on "click" this.remove}}>{{@trailingIcon}}</i>
    </span>
  {{/if}}
</div>
