{{#unless (has-block)}}
  {{#each chips as |chip index|}}
    <MdcChip @id={{chip.id}} @text={{chip.text}} @iconLeading={{chip.iconLeading}} @iconTrailing={{chip.iconTrailing}} @tabindex={{index}} />
  {{/each}}
  <MdcTextfieldInput @enter={{action "enter"}} @value={{value}} />
{{else}}
  {{yield}}
{{/unless}}
