<button {{on "click" (fn this.activateTab 2)}}>Activate Tab 3</button>
<MdcTabs @activeTab={{this.activeTab}}>
  <MdcTabBar>
    <MdcTabScroller>
      <MdcTab @label="Tab 1" />
      <MdcTab @label="Tab 2" />
      <MdcTab @label="Tab 3" />
    </MdcTabScroller>
  </MdcTabBar>

  <MdcTabPanels>
    <MdcTabPanel>
      Tab 1
    </MdcTabPanel>

    <MdcTabPanel>
      Tab 2
    </MdcTabPanel>

    <MdcTabPanel>
      Tab 3
    </MdcTabPanel>
  </MdcTabPanels>
</MdcTabs>