{{mdc-select-dropdown-icon}}
{{#mdc-select-native-control required=required
                             readonly=readonly
                             disabled=disabled
                             size=size
                             name=name
                             autofocus=autofocus
                             multiple=multiple
                             form=form}}
  {{#if (has-block)}}
    {{yield}}
  {{else}}
    {{#if firstOption}}
      {{#mdc-select-option value=firstOption.value disabled=firstOption.disabled selected=firstOption.selected}}{{if firstOption.text firstOption.text}}{{/mdc-select-option}}
    {{/if}}
    {{#each options as |option|}}
      {{#if option.group}}
        {{mdc-select-option-group label=option.text options=option.options}}
      {{else}}
        {{#mdc-select-option value=option.value selected=option.selected disabled=option.disabled}}{{option.text}}{{/mdc-select-option}}
      {{/if}}
    {{/each}}
  {{/if}}
{{/mdc-select-native-control}}

{{#if isOutlined}}
  {{mdc-notched-outline label=label noLabel=noLabel}}
{{else}}
  {{#mdc-floating-label}}{{label}}{{/mdc-floating-label}}
  {{mdc-line-ripple}}
{{/if}}
