<h1 id="title">Select Menus</h1>

<h3>Filled</h3>
<p>
  <MdcSelect @options={{this.foodGroups}}
             @label="Pick a Food Group"
             @change={{this.change}}
             @firstOptionIsEmpty={{true}}
             @leadingIcon="event"
             @value={{this.value}}
             @width="400px" />
</p>

<p>
  <button {{on "click" this.select}}>Select Fruits</button>
  <button {{on "click" this.clear}}>Clear</button>

</p>


{{#if this.selected}}
  <p>[{{this.selected.value}}]: {{this.selected.text}}</p>
{{/if}}

<h3>Outlined</h3>

<p>
  <MdcSelect @options={{this.foodGroups}}
             @label="Pick a Food Group"
             @firstOptionIsEmpty={{true}}
             @style="outlined"
             @disabled={{true}}
             @width="400px" />
</p>


<h2>Select Menu w/ Helper Text</h2>

<p>
  <MdcSelect @options={{this.foodGroups}}
             @label="Pick a Food Group"
             @firstOptionIsEmpty={{true}}
             @style="outlined"
             @leadingIcon="event"
             @required={{true}}
             @helperText="This is your helper text."
             @persistentHelperText={{true}}
             @width="400px" />
</p>

