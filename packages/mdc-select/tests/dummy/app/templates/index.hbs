<h2 id="title">Select Menus</h2>

<p>
  <MdcSelect @options={{this.foodGroups}}
             @label="Pick a Food Group"
             @change={{this.change}}
             @firstOptionIsEmpty={{true}}
             @leadingIcon="event"
             @value={{this.value}}
             @width="400px" />
</p>

<p>
  <button {{on "click" this.select}}>Select Fruits</button>
</p>


{{#if this.selected}}
  <p>[{{this.selected.value}}]: {{this.selected.text}}</p>
{{/if}}

<p>
  <MdcSelect @options={{this.foodGroups}}
             @label="Pick a Food Group"
             @firstOptionIsEmpty={{true}}
             @style="outlined"
             @leadingIcon="event"
             @required={{true}}
             @width="400px" />
</p>

<p>
  <MdcSelect @options={{this.foodGroups}}
             @label="Pick a Food Group"
             @firstOptionIsEmpty={{true}}
             @style="outlined"
             @disabled={{true}}
             @width="400px" />
</p>
