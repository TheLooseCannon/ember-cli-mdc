<li class="mdc-image-list__item" ...attributes>
  {{#if (has-block)}}
    {{yield}}
  {{else}}
    {{#if @image}}
      {{#if @imageAspectContainer}}
        <MdcImageListImageAspectContainer>
          <MdcImageListImage @image={{@image}} />
        </MdcImageListImageAspectContainer>
      {{else}}
        <MdcImageListImage @image={{@image}} />
      {{/if}}
    {{/if}}

    {{#if @label}}
      <MdcImageListSupporting>
        <span class="mdc-image-list__label">{{@label}}</span>
      </MdcImageListSupporting>
    {{/if}}
  {{/if}}
</li>